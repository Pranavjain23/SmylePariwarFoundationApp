<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/soSocial"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:src="@drawable/smylelogo"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/imgSlider"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/smylelogo"
        android:layout_below="@id/soSocial"/>

    <TextView
        android:id="@+id/sliderHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slider Heading"
        android:layout_below="@id/imgSlider"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/sliderDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slider Description"
        android:layout_below="@id/sliderHeading"
        android:textColor="#6e7a75"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:gravity="center_horizontal" />

</RelativeLayout>