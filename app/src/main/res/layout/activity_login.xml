<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:fillViewport="true"
    android:background="@drawable/heading_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentLeft="true"/>

        <!--   <ImageView
               android:id="@+id/help"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/ic_help"
               android:layout_alignParentRight="true"/>-->


           <TextView
               android:id="@+id/txtWelcomeBack"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Welcome back!"
               android:layout_marginStart="5dp"
               android:textAllCaps="false"
               android:textColor="@color/colorWhite"
               android:layout_below="@id/close"
               android:layout_marginTop="40dp"
               android:textSize="30sp"
               android:textStyle="bold"/>

           <TextView
               android:id="@+id/txtLoginYourAccount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Log in to your Account"
               android:layout_marginStart="5dp"
               android:textAllCaps="false"
               android:textColor="@color/colorWhite"
               android:textSize="16sp"
               android:layout_marginTop="10dp"
               android:layout_below="@id/txtWelcomeBack"/>

           <EditText
               android:layout_width="match_parent"
               android:hint="Username, Phone or Email ID"
               android:id="@+id/mail_et"
               android:layout_marginTop="25dp"
               android:paddingStart="15dp"
               android:background="@drawable/et_bg"
               android:singleLine="true"
               android:layout_below="@id/txtLoginYourAccount"
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/ic_person"
               android:inputType="textEmailAddress"
               android:textColor="@color/colorWhite"
               android:layout_height="55dp"
               android:layout_marginEnd="5dp"
               android:layout_marginStart="5dp"/>
           <EditText
               android:layout_width="match_parent"
               android:hint="Password"
               android:id="@+id/password_et"
               android:layout_marginTop="20dp"
               android:paddingLeft="15dp"
               android:background="@drawable/et_bg"
               android:singleLine="true"
               android:layout_below="@id/mail_et"
               android:drawablePadding="10dp"
               android:drawableLeft="@drawable/ic_lock"
               android:textColor="@color/colorWhite"
               android:inputType="textPassword"
               android:layout_height="55dp"
               android:layout_marginEnd="5dp"
               android:layout_marginStart="5dp"/>

           <!-- <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Forgot password?"
                android:layout_below="@id/password_et"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:textSize="18sp"/>-->

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Continue"
            android:layout_marginTop="40dp"
            android:background="@drawable/signuproundcorners"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_below="@id/password_et"/>


        <TextView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont have an Account ? Sign Up"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_below="@id/btnContinue"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorWhite"
            />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_below="@id/signUp"


            android:textColor="@color/colorWhite"
            />



    </RelativeLayout>
</ScrollView>