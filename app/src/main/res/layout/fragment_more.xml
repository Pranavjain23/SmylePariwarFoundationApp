<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnAdminAccess"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Admin Access"
        android:textSize="10sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/shape1"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>



    <TextView
        android:textColor="#000"
        android:padding="5dp"
        android:layout_marginTop="40dp"
        android:id="@+id/txtName"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""/>



    <RelativeLayout
        android:id="@+id/rlShare"
        android:layout_below="@+id/txtName"
        android:layout_width="match_parent"

        android:padding="15dp"
        android:layout_height="190dp">
        <TextView
            android:id="@+id/shareHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Tell Family and Friends "
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/shareContent"
            android:layout_width="match_parent"
            android:layout_below="@+id/shareHeading"
            android:textAlignment="center"
            android:layout_height="wrap_content"

            android:text="Share this app to the people you know and contibute to a great cause"
            android:textSize="20sp"/>

        <Button
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:id="@+id/txtShare"
            android:textSize="25sp"
            android:layout_below="@+id/shareContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/rlShare"

        android:background="@drawable/shape1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Contibution"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </RelativeLayout>




   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:padding="20dp"
       android:layout_alignParentBottom="true">
       <TextView
           android:padding="10dp"
           android:id="@+id/txtAccount"
           android:textSize="25sp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Account"/>

       <TextView
           android:id="@+id/txtHelp"
           android:padding="10dp"
           android:textSize="25sp"
           android:layout_below="@+id/txtAccount"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Help"/>

       <TextView
           android:id="@+id/txtSignOut"
           android:padding="10dp"
           android:textSize="25sp"
           android:layout_below="@+id/txtHelp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Sign Out"/>



   </RelativeLayout>

</RelativeLayout>