<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpActivity"
    android:fillViewport="true"
    android:background="@drawable/heading_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/signup_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/txtCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_back"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"
            android:text="Create Account"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtCreateAccount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please fill the input below"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/txtCreateAccount" />

        <EditText
            android:id="@+id/edtname"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/txtCreateAccount1"/>





        <EditText
            android:layout_width="match_parent"
            android:hint="Email ID"
            android:id="@+id/edtemail"
            android:paddingLeft="15dp"
            android:background="@drawable/et_bg"
            android:singleLine="true"
            android:layout_below="@id/edtname"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_email"
            android:textColor="@color/colorWhite"
            android:inputType="textEmailAddress"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/edtphonenumber"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="55dp"
            android:drawableStart="@drawable/ic_phone"
            android:background="@drawable/et_bg"
            android:hint="Phone Number"
            android:layout_below="@id/edtemail"
            android:inputType="text"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"/>

        <EditText
            android:id="@+id/edtpass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/edtphonenumber"/>

        <EditText
            android:id="@+id/edtconfirmpass"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/et_bg"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/edtpass"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textSize="20sp"
            android:text="Sign up"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/signuproundcorners"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:layout_below="@id/edtconfirmpass"/>



    </RelativeLayout>

</ScrollView>