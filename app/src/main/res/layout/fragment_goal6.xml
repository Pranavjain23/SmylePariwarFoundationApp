<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Goal6Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/header_background_dark">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal 6"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Khatu Shyam ji Bus Tour"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="19sp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/aboutGoal"
            android:layout_below="@id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam porta, est sit amet ornare malesuada, enim tellus vulputate dui, id vestibulum est massa in eros. Vestibulum convallis purus vitae est convallis ullamcorper vel ac tellus. Sed condimentum euismod tempus. Suspendisse condimentum ligula sit amet elit imperdiet, ac mollis arcu lobortis. Quisque vehicula felis eu consequat blandit. Nulla rutrum est quis sapien ornare elementum. Curabitur sagittis leo non libero cursus lobortis. Sed neque velit, malesuada venenatis eros eu, viverra molestie eros. Sed porttitor leo dolor, at laoreet risus mollis finibus. Nulla ac tristique velit, vitae venenatis nibh. Curabitur ut aliquam mi, et eleifend augue."
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout

            android:id="@+id/rlNeedHelp"
            android:layout_below="@+id/aboutGoal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="280dp">
            <TextView
                android:id="@+id/txtHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our highlights"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>


            <androidx.viewpager2.widget.ViewPager2
                android:layout_marginTop="20dp"
                android:id="@+id/goal1ViewPager"
                android:layout_width="match_parent"
                android:layout_below="@id/txtHelp"
                android:layout_height="200dp"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                />

        </RelativeLayout>



    </RelativeLayout>


</ScrollView>